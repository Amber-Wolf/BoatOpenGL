#include "Spinner.h"


Spinner::Spinner(vec3 pos , vec3 ax , GLfloat r)
	:position(pos), axis(ax), rate(r)
{
}


Spinner::~Spinner(void)
{
}

void Spinner::update(float elapsedTimeSeconds)
{
	static float rotation = 0.0f;

	rotation += elapsedTimeSeconds * rate;
	mat4 posMatrix = translate(mat4(1.0f), position);
	target->modelMatrix = rotate(posMatrix, fmod(rotation, 360.0f), axis);
}
